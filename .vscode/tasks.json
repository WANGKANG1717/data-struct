{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build",
			"command": "g++.exe",
			"args": [
				"-g",
				"${file}",
				"-o",
				//需要先在工作空间中新建一个build文件夹
				"${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
				//此命令不需要建build文件夹
				// "${fileDirname}\\${fileBasenameNoExtension}.exe",
				"-std=c++17"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "Run",
			"command": "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
			// "${fileDirname}\\${fileBasenameNoExtension}.exe",
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"type": "shell",
			"label": "Build->Run",
			"command": "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe",
			// "${fileDirname}\\${fileBasenameNoExtension}.exe",
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"dependsOn": "Build"
		}
	]
}